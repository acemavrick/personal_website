---
import Base from '../layouts/Base.astro';
import { site } from '../config';
---

<Base title="Page Not Found">
    <div class="flex flex-col items-center justify-center min-h-[60vh] text-center">
        <!-- glowing 404 -->
        <div class="relative mb-6">
            <h1 class="text-8xl md:text-9xl font-bold bg-gradient-to-b from-neutral-500 to-neutral-700 bg-clip-text text-transparent">404</h1>
            <div class="absolute inset-0 text-8xl md:text-9xl font-bold bg-gradient-to-b from-emerald-500/20 to-transparent bg-clip-text text-transparent blur-2xl">404</div>
        </div>
        
        <p class="text-xl text-neutral-300 mb-10">This page doesn't exist</p>
        
        <a href="/" class="group relative inline-flex items-center gap-3 px-7 py-4 rounded-2xl transition-all duration-500 hover:-translate-y-1">
            <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/10 to-white/5 backdrop-blur-xl border border-white/10 group-hover:border-emerald-500/30 transition-colors duration-300"></div>
            <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-gradient-to-br from-emerald-500/10 to-transparent"></div>
            
            <div class="relative flex items-center gap-3">
                <div class="relative">
                    <div class="absolute inset-0 rounded-full bg-emerald-500/30 blur-md opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <img src={site.pfp} alt={site.name} class="relative w-10 h-10 rounded-full border border-white/20 group-hover:border-emerald-500/50 transition-all duration-300" />
                </div>
                <span class="text-neutral-200 font-medium group-hover:text-white transition-colors duration-300">Back to Home</span>
            </div>
        </a>
    </div>
</Base>
