---
import '../styles/global.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="color-scheme" content="light dark" />
		<link rel="icon" type="image/svg+xml" href="https://avatars.githubusercontent.com/acemavrick" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-white dark:bg-neutral-950 text-neutral-900 dark:text-neutral-100 transition-colors duration-300">
		<main class="mx-auto max-w-5xl px-6 py-12 md:py-20">
			<slot />
		</main>
	</body>
</html>
