---
// Hero component - uses sitewide config
import { Image } from 'astro:assets';
import { site } from '../config';

const { name, pfp, tagline, socials } = site;
---

<section class="flex justify-center py-16 pb-24">
	<div class="flex flex-col items-center gap-6">
		<!-- avatar with glow ring -->
		<div class="fade-up avatar-wrapper">
			<div class="avatar-glow"></div>
			<Image 
				src={pfp} 
				alt={name} 
				width={120} 
				height={120} 
				class="avatar relative rounded-full border-2 border-white/20 transition-all duration-500"
			/>
		</div>

		<!-- name with gradient -->
		<h1 class="fade-up delay-1 text-4xl md:text-5xl font-semibold tracking-tight">
			<span class="bg-gradient-to-br from-white via-neutral-200 to-neutral-400 bg-clip-text text-transparent">{name}</span>
		</h1>

		<!-- accent line with animation -->
		<div class="fade-up delay-2 accent-line w-16 h-px"></div>

		<!-- tagline -->
		<p class="fade-up delay-3 text-lg text-neutral-300 tracking-wide max-w-xl text-center leading-relaxed" set:html={tagline}></p>

		<!-- social links with brand colors -->
		<nav class="fade-up delay-4 flex flex-col sm:flex-row flex-wrap justify-center gap-3 mt-4" aria-label="Social links">
			{socials.map(({ href, handle, icon }) => (
				<a 
					href={href} 
					target={href.startsWith('mailto') ? undefined : '_blank'}
					rel={href.startsWith('mailto') ? undefined : 'noopener noreferrer'}
					class:list={[
						"social-link flex items-center gap-2.5 px-4 py-2.5 rounded-xl transition-all duration-300",
						"bg-white/5 border border-white/10 backdrop-blur-sm",
						`social-${icon}`
					]}
				>
					{icon === 'github' && (
						<svg viewBox="0 0 24 24" fill="currentColor" class="size-4 text-neutral-400">
							<path d="M12 0C5.37 0 0 5.37 0 12c0 5.31 3.435 9.795 8.205 11.385.6.105.825-.255.825-.57 0-.285-.015-1.23-.015-2.235-3.015.555-3.795-.735-4.035-1.41-.135-.345-.72-1.41-1.23-1.695-.42-.225-1.02-.78-.015-.795.945-.015 1.62.87 1.845 1.23 1.08 1.815 2.805 1.305 3.495.99.105-.78.42-1.305.765-1.605-2.67-.3-5.46-1.335-5.46-5.925 0-1.305.465-2.385 1.23-3.225-.12-.3-.54-1.53.12-3.18 0 0 1.005-.315 3.3 1.23.96-.27 1.98-.405 3-.405s2.04.135 3 .405c2.295-1.56 3.3-1.23 3.3-1.23.66 1.65.24 2.88.12 3.18.765.84 1.23 1.905 1.23 3.225 0 4.605-2.805 5.625-5.475 5.925.435.375.81 1.095.81 2.22 0 1.605-.015 2.895-.015 3.3 0 .315.225.69.825.57A12.02 12.02 0 0024 12c0-6.63-5.37-12-12-12z"/>
						</svg>
					)}
					{icon === 'youtube' && (
						<svg viewBox="0 0 24 24" fill="currentColor" class="size-4 text-red-500">
							<path d="M23.498 6.186a3.016 3.016 0 00-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 00.502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 002.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 002.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
						</svg>
					)}
					{icon === 'instagram' && (
						<svg viewBox="0 0 24 24" fill="url(#instagram-gradient)" class="size-4">
							<defs>
								<linearGradient id="instagram-gradient" x1="0%" y1="100%" x2="100%" y2="0%">
									<stop offset="0%" style="stop-color:#feda75"/>
									<stop offset="25%" style="stop-color:#fa7e1e"/>
									<stop offset="50%" style="stop-color:#d62976"/>
									<stop offset="75%" style="stop-color:#962fbf"/>
									<stop offset="100%" style="stop-color:#4f5bd5"/>
								</linearGradient>
							</defs>
							<path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zM12 0C8.741 0 8.333.014 7.053.072 2.695.272.273 2.69.073 7.052.014 8.333 0 8.741 0 12c0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98C8.333 23.986 8.741 24 12 24c3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98C15.668.014 15.259 0 12 0zm0 5.838a6.162 6.162 0 100 12.324 6.162 6.162 0 000-12.324zM12 16a4 4 0 110-8 4 4 0 010 8zm6.406-11.845a1.44 1.44 0 100 2.881 1.44 1.44 0 000-2.881z"/>
						</svg>
					)}
					{icon === 'mail' && (
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="size-4 text-emerald-400">
							<rect x="2" y="4" width="20" height="16" rx="2"/>
							<path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
						</svg>
					)}
					<span class="text-sm text-neutral-300">{handle}</span>
				</a>
			))}
		</nav>
	</div>
</section>

<style>
	/* avatar with animated glow */
	.avatar-wrapper {
		position: relative;
	}

	.avatar-glow {
		position: absolute;
		inset: -8px;
		border-radius: 50%;
		background: conic-gradient(from 0deg, rgba(16, 185, 129, 0.4), rgba(59, 130, 246, 0.3), rgba(168, 85, 247, 0.3), rgba(16, 185, 129, 0.4));
		filter: blur(20px);
		opacity: 0.6;
		animation: glow-rotate 8s linear infinite;
	}

	@keyframes glow-rotate {
		from { transform: rotate(0deg); }
		to { transform: rotate(360deg); }
	}

	.avatar-wrapper:hover .avatar-glow {
		opacity: 0.9;
		filter: blur(25px);
	}

	.avatar-wrapper:hover .avatar {
		border-color: rgba(255, 255, 255, 0.4);
		transform: scale(1.02);
	}

	/* animated accent line */
	.accent-line {
		background: linear-gradient(90deg, transparent, rgba(16, 185, 129, 0.6), rgba(59, 130, 246, 0.4), transparent);
		background-size: 200% 100%;
		animation: shimmer 3s ease-in-out infinite;
	}

	@keyframes shimmer {
		0%, 100% { background-position: -200% 0; }
		50% { background-position: 200% 0; }
	}

	/* social links with brand-specific hover */
	.social-link {
		box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
	}

	.social-link:hover {
		transform: translateY(-3px);
		box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
	}

	.social-github:hover {
		background: rgba(255, 255, 255, 0.1);
		border-color: rgba(255, 255, 255, 0.2);
	}

	.social-youtube:hover {
		background: rgba(255, 0, 0, 0.1);
		border-color: rgba(255, 0, 0, 0.3);
	}

	.social-instagram:hover {
		background: linear-gradient(45deg, rgba(254, 218, 117, 0.1), rgba(214, 41, 118, 0.1), rgba(150, 47, 191, 0.1));
		border-color: rgba(214, 41, 118, 0.3);
	}

	.social-mail:hover {
		background: rgba(16, 185, 129, 0.1);
		border-color: rgba(16, 185, 129, 0.3);
	}
</style>