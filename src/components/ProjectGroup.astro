---
// groups narrative text with project cards as one timeline unit
import ProjectCard from './ProjectCard.astro';

interface Props {
    projectNames: string[];
    class?: string;
}

const { projectNames, class: className } = Astro.props;
---

<section class:list={["project-group relative pl-8 md:pl-14 py-8", className]}>
    <!-- timeline line with gradient (hidden on mobile) -->
    <div class="timeline-line absolute left-0 top-0 bottom-0 w-px hidden md:block">
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-emerald-500/40 to-transparent"></div>
        <div class="absolute inset-0 bg-gradient-to-b from-transparent via-blue-500/20 to-transparent translate-y-4"></div>
    </div>
    
    <!-- timeline node with pulse -->
    <div class="timeline-node-wrapper absolute left-0 top-10 -translate-x-1/2 hidden md:block">
        <div class="timeline-pulse absolute inset-0 rounded-full bg-emerald-500/30 animate-ping"></div>
        <div class="timeline-node relative w-3 h-3 rounded-full bg-gradient-to-br from-emerald-400 to-emerald-600 border border-emerald-300/50 shadow-lg shadow-emerald-500/30"></div>
    </div>
    
    <!-- narrative slot (the comment/context for this section) -->
    <div class="narrative text-neutral-200 leading-relaxed max-w-prose mb-8 text-[15px]">
        <slot />
    </div>
    
    <!-- project cards grid -->
    <div class="grid gap-6 grid-cols-[repeat(auto-fit,minmax(min(100%,320px),1fr))]">
        {projectNames.map((name: string) => <ProjectCard name={name} />)}
    </div>
</section>

<style>
    /* subtle pulse animation */
    .timeline-pulse {
        animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }

    @keyframes pulse {
        0%, 100% { opacity: 0; transform: scale(1); }
        50% { opacity: 0.5; transform: scale(2); }
    }

    /* enhanced glow on hover */
    .project-group:hover .timeline-node {
        box-shadow: 0 0 20px rgba(16, 185, 129, 0.6), 0 0 40px rgba(16, 185, 129, 0.3);
        transform: scale(1.2);
        transition: all 0.3s ease;
    }

    .project-group:hover .timeline-pulse {
        animation: none;
        opacity: 0.8;
        transform: scale(2.5);
    }
</style>
