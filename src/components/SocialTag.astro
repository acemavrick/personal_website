---
interface Props {
  logo_link: string;
  logo_name: string;
  link: string;
  name: string;
}

const { logo_link, logo_name, link, name } = Astro.props;
---

<a href={link} target="_blank" rel="noopener noreferrer" 
class="not-prose inline-flex items-center self-start leading-none bg-blue-200 dark:bg-blue-900/40 text-black dark:text-blue-200 ring ring-teal-800 dark:ring-teal-600/60 text-xs px-2 py-1 rounded cursor-pointer gap-1">
  <img src={logo_link} alt={logo_name} class="block w-4 h-4 shrink-0 dark:invert" />
  {name}
</a>