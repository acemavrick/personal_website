---
interface Props {
  logo_link: string;
  logo_name: string;
  link: string;
  name: string;
}

const { logo_link, logo_name, link, name } = Astro.props;
---

<a 
  href={link} 
  target="_blank" 
  rel="noopener noreferrer" 
  class="group inline-flex items-center gap-2 px-4 py-2 rounded-full border border-neutral-700 hover:border-sky-600 bg-neutral-900/80 backdrop-blur-sm text-neutral-300 hover:text-sky-400 text-sm font-medium transition-all duration-300 hover:scale-105 hover:shadow-md"
>
  <img 
    src={logo_link} 
    alt={logo_name} 
    class="w-4 h-4 invert transition-transform group-hover:rotate-6" 
  />
  {name}
</a>