---
// ProjectsSection component
import ProjectCard from './ProjectCard.astro';

// display ProjectCard components for each project
const { projectNames, class: className } = Astro.props;

// projectNames is an array of strings, where each string will be the url slug of the project
// i.e. "example" -> /projects/example
---

<section class:list={["py-8 first:pt-0", className]}>
    <div class="grid gap-6 grid-cols-[repeat(auto-fit,minmax(min(100%,320px),1fr))]">
        {projectNames.map((name: string) => <ProjectCard name={name} />)}
    </div>
</section>