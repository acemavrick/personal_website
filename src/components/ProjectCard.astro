---
// component for displaying a project card
import TechTag from "./TechTag.astro";
import { getEntry } from "astro:content";

const { name } = Astro.props;

const project = await getEntry("projects", name);
if (!project) throw new Error(`Project "${name}" not found.`);

const { title, date, tech, summary } = project.data;
---

<article class="project-card group relative p-6 rounded-2xl transition-all duration-500">
    <!-- glassmorphic layers -->
    <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-white/[0.08] to-white/[0.02] backdrop-blur-xl"></div>
    <div class="absolute inset-0 rounded-2xl border border-white/10"></div>
    <div class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500 bg-gradient-to-br from-emerald-500/10 via-transparent to-blue-500/5"></div>
    
    <!-- inner glow effect -->
    <div class="absolute inset-px rounded-2xl bg-gradient-to-b from-white/5 to-transparent pointer-events-none"></div>
    
    <div class="relative flex flex-col gap-4">
        <!-- header -->
        <div class="flex items-start justify-between gap-4">
            <h3 class="text-xl font-semibold bg-gradient-to-br from-white to-neutral-300 bg-clip-text text-transparent">
                {title}
            </h3>
            <time class="text-xs text-neutral-500 whitespace-nowrap pt-1 font-mono">{date}</time>
        </div>

        <!-- tech stack -->
        <div class="flex flex-wrap gap-2">
            {tech.map((t) => <TechTag tech={t} />)}
        </div>

        <!-- summary -->
        <p class="text-sm text-neutral-400 leading-relaxed">{summary}</p>

        <!-- link -->
        <a 
            href={`/projects/${name}`} 
            class="project-link inline-flex items-center gap-2 text-sm text-neutral-400 transition-all duration-300 hover:text-emerald-400 w-fit mt-2"
        >
            <span>View Project</span>
            <svg class="arrow size-4 transition-transform duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
        </a>
    </div>
</article>

<style>
    .project-card {
        box-shadow: 
            0 4px 16px rgba(0, 0, 0, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .project-card:hover {
        transform: translateY(-4px);
        box-shadow: 
            0 20px 40px rgba(0, 0, 0, 0.3),
            0 0 60px -20px rgba(16, 185, 129, 0.2),
            inset 0 1px 0 rgba(255, 255, 255, 0.1);
    }

    .project-card:hover > div:nth-child(2) {
        border-color: rgba(16, 185, 129, 0.3);
    }

    .project-link:hover .arrow {
        transform: translateX(4px);
    }
</style>
