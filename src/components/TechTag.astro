---
interface Props {
    tech: string;
}

const { tech } = Astro.props;

// color mapping for tech tags
const colorMap: Record<string, { bg: string; border: string; text: string }> = {
    python: { 
        bg: "from-emerald-500/15 to-green-600/5", 
        border: "border-emerald-500/25", 
        text: "text-emerald-300"
    },
    swift: { 
        bg: "from-orange-500/15 to-red-500/5", 
        border: "border-orange-500/25", 
        text: "text-orange-300"
    },
    typescript: { 
        bg: "from-blue-500/15 to-indigo-500/5", 
        border: "border-blue-500/25", 
        text: "text-blue-300"
    },
    java: { 
        bg: "from-amber-500/15 to-orange-600/5", 
        border: "border-amber-500/25", 
        text: "text-amber-300"
    },
    // sveltekit: #FF3E00 Svelte orange-red
    sveltekit: { 
        bg: "from-orange-600/15 to-red-500/5", 
        border: "border-orange-600/25", 
        text: "text-orange-400"
    },
    // jupyter: #F37626 warm orange
    jupyter: { 
        bg: "from-orange-500/15 to-amber-500/5", 
        border: "border-orange-500/25", 
        text: "text-orange-300"
    },
    // sqlite: #003B57 dark navy blue
    sqlite: { 
        bg: "from-sky-700/15 to-blue-900/5", 
        border: "border-sky-700/25", 
        text: "text-sky-400"
    },
    // pandas: #150458 navy + #E70488 pink accents
    pandas: { 
        bg: "from-indigo-800/15 to-pink-600/5", 
        border: "border-indigo-600/25", 
        text: "text-pink-300"
    },
    // metal: green-to-blue gradient matching Apple's Metal icon
    metal: {
        bg: "from-green-400/15 to-blue-500/10",
        border: "border-teal-500/25",
        text: "text-teal-300"
    },
    // swiftui: #007AFF Apple system blue
    swiftui: {
        bg: "from-blue-500/15 to-blue-600/5",
        border: "border-blue-500/25",
        text: "text-blue-400"
    },
    // flask: cyan-teal from the flask/beaker logo
    flask: {
        bg: "from-cyan-500/15 to-sky-600/5",
        border: "border-cyan-500/25",
        text: "text-cyan-300"
    },
    default: { 
        bg: "from-neutral-500/15 to-neutral-600/5", 
        border: "border-neutral-500/25", 
        text: "text-neutral-300"
    },
};

const lowerTech = tech.toLowerCase();
const colors = colorMap[lowerTech] || colorMap.default;
---

<span class:list={[
    "inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium",
    "bg-linear-to-r border",
    colors.bg,
    colors.border,
    colors.text
]}>
    {tech}
</span>