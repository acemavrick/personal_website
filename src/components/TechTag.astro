---
interface Props {
    tech: string;
}

const { tech } = Astro.props;

// color mapping for tech tags
const colorMap: Record<string, { bg: string; border: string; text: string; glow: string }> = {
    python: { 
        bg: "from-emerald-500/20 to-green-600/10", 
        border: "border-emerald-500/30", 
        text: "text-emerald-300",
        glow: "shadow-emerald-500/20"
    },
    swift: { 
        bg: "from-orange-500/20 to-red-500/10", 
        border: "border-orange-500/30", 
        text: "text-orange-300",
        glow: "shadow-orange-500/20"
    },
    typescript: { 
        bg: "from-blue-500/20 to-indigo-500/10", 
        border: "border-blue-500/30", 
        text: "text-blue-300",
        glow: "shadow-blue-500/20"
    },
    java: { 
        bg: "from-amber-500/20 to-orange-600/10", 
        border: "border-amber-500/30", 
        text: "text-amber-300",
        glow: "shadow-amber-500/20"
    },
    default: { 
        bg: "from-neutral-500/20 to-neutral-600/10", 
        border: "border-neutral-500/30", 
        text: "text-neutral-300",
        glow: "shadow-neutral-500/10"
    },
};

const lowerTech = tech.toLowerCase();
const colors = colorMap[lowerTech] || colorMap.default;
---

<span class:list={[
    "inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-semibold",
    "bg-gradient-to-r backdrop-blur-sm border transition-all duration-300",
    "hover:scale-105 shadow-lg",
    colors.bg,
    colors.border,
    colors.text,
    colors.glow
]}>
    {tech}
</span>