---
interface Props {
    tech: string;
}

const { tech } = Astro.props;

// color mapping for tech tags
const colorMap: Record<string, { bg: string; border: string; text: string }> = {
    python: { 
        bg: "from-emerald-500/15 to-green-600/5", 
        border: "border-emerald-500/25", 
        text: "text-emerald-300"
    },
    swift: { 
        bg: "from-orange-500/15 to-red-500/5", 
        border: "border-orange-500/25", 
        text: "text-orange-300"
    },
    typescript: { 
        bg: "from-blue-500/15 to-indigo-500/5", 
        border: "border-blue-500/25", 
        text: "text-blue-300"
    },
    java: { 
        bg: "from-amber-500/15 to-orange-600/5", 
        border: "border-amber-500/25", 
        text: "text-amber-300"
    },
    default: { 
        bg: "from-neutral-500/15 to-neutral-600/5", 
        border: "border-neutral-500/25", 
        text: "text-neutral-300"
    },
};

const lowerTech = tech.toLowerCase();
const colors = colorMap[lowerTech] || colorMap.default;
---

<span class:list={[
    "inline-flex items-center px-2.5 py-1 rounded-md text-xs font-medium",
    "bg-gradient-to-r border",
    colors.bg,
    colors.border,
    colors.text
]}>
    {tech}
</span>